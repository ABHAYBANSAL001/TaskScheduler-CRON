generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?

  timezone String @default("UTC")

  accounts         Account[]
  sessions         Session[]
  platformAccounts PlatformAccount[]
  tasks            Task[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// we are not usign the session table because we use the jwt for now > 
// The Session model stores active login sessions in the database when using database session strategy.
// Since you use JWT sessions, it’s not used now—JWT replaces it—but it’s kept for future flexibility or stricter security needs.
// ignore it for now...
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PlatformAccount {
  id       String   @id @default(cuid())
  userId   String
  platform Platform

  // The User's ID on X/LinkedIn (e.g. "12345678")
  externalId String

  // SECURITY FIX: Renamed to remind you to Encrypt before saving
  encryptedAccessToken  String  @db.Text
  encryptedRefreshToken String? @db.Text

  expiresAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // A user can't connect the same LinkedIn account twice
  @@unique([platform, externalId])
  @@index([userId])
}

enum Platform {
  LINKEDIN
  TWITTER
  WHATSAPP
  INSTAGRAM
}

model Task {
  id     String @id @default(cuid())
  userId String

  content String @db.Text

  // ADDED NOW: Even if you use it later, adding the array now prevents migration pain.
  mediaUrls String[]

  scheduledAt DateTime
  status      TaskStatus @default(PENDING)

  executions TaskExecution[]
  user       User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  // INDEXING: Critical for the Cron Job to find tasks quickly
  @@index([scheduledAt])
  @@index([userId])
}

enum TaskStatus {
  DRAFT
  PENDING
  COMPLETED
  FAILED
}

model TaskExecution {
  id     String @id @default(cuid())
  taskId String

  platform Platform
  status   ExecutionStatus @default(PENDING)

  // Stores the error message if the API fails (e.g., "Image too large")
  error String? @db.Text

  startedAt  DateTime?
  finishedAt DateTime?

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId])
}

enum ExecutionStatus {
  PENDING
  RUNNING
  SUCCESS
  FAILED
}
